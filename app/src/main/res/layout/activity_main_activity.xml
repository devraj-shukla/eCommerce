<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDF8"
    android:fadeScrollbars="true"
    android:orientation="vertical"
    android:rotation="360"
    android:scrollbars="horizontal">

    <TextView
        android:id="@+id/tv_nameproduct_homepage"
        android:layout_width="258dp"
        android:layout_height="69dp"
        android:layout_marginTop="16dp"
        android:background="#FBFBFB"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:includeFontPadding="true"
        android:text="Spolub"
        android:textColor="#03A9F4"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/search1"
        android:layout_width="235dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:background="#ADEBF3"
        android:ems="10"
        android:gravity="center|center_horizontal"
        android:hint="Search"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameproduct_homepage" />

    <Button
        android:id="@+id/CartButton_1"
        android:layout_width="99dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="Cart"
        app:backgroundTint="#ADEBF3"
        app:layout_constraintBottom_toTopOf="@+id/categoryview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="365dp"
        android:layout_height="209dp"
        android:layout_marginTop="24dp"
        android:background="@color/white"
        android:fadeScrollbars="true"
        android:orientation="horizontal"
        android:rotation="0"
        app:fastScrollEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryview"
        android:layout_width="372dp"
        android:layout_height="232dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="184dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="38dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center|start"
        android:includeFontPadding="true"
        android:text="Lets Play"
        android:textColor="#03A9F4"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/categoryview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.088"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

    <Button
        android:id="@+id/bt_home_login"
        android:layout_width="86dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="22dp"
        android:text="Login"
        app:backgroundTint="#ADEBF3"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nameproduct_homepage"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>